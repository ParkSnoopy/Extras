                "Remove-Item -Path \"$dir\\data\\WebView2.x64.dll\" -Force -ErrorAction SilentlyContinue",
                "# Remove arm64 binaries",
                "Get-ChildItem \"$dir\" -Recurse | Where{$_.Name -Match \"\\.a64\\.....?$\"} | Remove-Item",
                "Rename-Item -Path \"$dir\\Bandiview.x64.exe\" -NewName \"$dir\\Bandiview.exe\""
            ]
        },
